package rechercheV1;

public class RechercheV1 {

	public static void main(String[] args) {
		
		boolean trouve = false;
		int compteur = 0;
		String nom = "Alice";
		String[] liste = {"Alice", "Bob", "John", "Carole", "David", "Emily", "Fabrice"};
		
		while(!trouve) {
			
			System.out.println("Boucle numéro " + compteur);
			if(liste[compteur]==nom) {
				trouve = true;
				System.out.println("Le nom " + nom + " a été trouvé en position " + compteur + " de la liste");
			}
			
			compteur+=1;
			
			
		}

	}

}
