package tri;

public class TriSelection {

	public static void main(String[] args) {
		int[] t = {2, 4, 9, 5, 7, 3, 6, 1};
		
		triSelection(t);
		
		for (int i = 0; i < t.length; i++) {
			System.out.println(t[i]);
		}

	}
	
	
	public static void triSelection(int[] tab) {
		int temp;
		
		
		for (int j = 0; j < tab.length; j++) {
			temp = j;
			int len = tab.length;
			for (int i = 0; i < len; i++) {
				if(tab[i] < tab[temp]) {
					System.out.println("this is tab i " + tab[i] + " and this is tab temp " +  tab[temp]);
					temp = i;
				}
				
			}
			
			int holder = tab[temp];
			tab[temp] = tab[j];
			tab[j] = holder;
		}

	}

}
